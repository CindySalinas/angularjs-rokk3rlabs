
.chart-info
  text-align left
  h4
    color $titles-chart
    margin 0
  h4, span
    display inline-block
  span
    color #B0B5BD
    float right
.chart-zones
  margin 5px auto
  text-align center
  width 80%

.count-zones, .average-zones, .speed-zones
  background-color #fff
  border solid 1px #bfd0e1
  border-radius 4px
  display inline-block
  margin-top 20px
  padding 15px
  position relative

.count-zones
  width 45%

.speed-zones
  width 90%

.average-zones
  width 40%
