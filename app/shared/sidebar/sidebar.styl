nav
  background-color $bg-color
  bottom 0
  left 0
  margin-top 60px
  padding 5px
  position fixed
  overflow: hidden;
  top 0
  width 250px
  .nav-wrap
    height 100%
    overflow-x hidden
    right -20px
    position relative
    h4
      border-bottom 2px solid #373b42
      color $title-aside
      margin-right 40px
      padding-bottom 5px
      text-transform uppercase
    .nav
      list-style none
      padding 0
      li
        padding 10px 0
        a
          color $color-links
          text-decoration none
          i
            color $icons-aside
            margin-right 8px
        .active
          background-color #1e2025
          padding 10px
          width 100%
        .not-active
          cursor default
          pointer-events none
        &:hover
          background-color #1e2025
      .close-menu
        margin-top 30px
